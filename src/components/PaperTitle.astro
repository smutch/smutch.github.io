---
const {
  title,
  bgImage = false,
  authors,
  ref,
  doi = false,
  journal,
  journalLink,
  adsLink = false,
  arxivLink = false,
} = Astro.props;
---

<h1 class="text-5xl font-black mb-2">
  {
    bgImage ? (
      <span
        class="w-full bg-cover bg-no-repeat bg-clip-text text-transparent overflow-hidden brightness-50"
        style=`background-image: url('${bgImage}')`
      >
        {title}
      </span>
    ) : title
  }
</h1>
<h4>
  <Fragment set:html={authors} /><br />{ref}{
    doi && (
      <>
        <br />
        <span class="text-sm">{doi}</span>
      </>
    )
  }
</h4>
<div class="text-center font-bold mt-4 flex flex-row gap-2">
  <a href={journalLink} class="hover:text-indigo-500"
    ><div class="grid grid-cols-1">
      <i class="ai ai-open-access ai-3x"></i><span>{journal}</span>
    </div></a
  >
  {
    adsLink && (
      <a href={adsLink} class="hover:text-indigo-500">
        <div class="grid grid-cols-1">
          <i class="ai ai-ads ai-3x" />
          <span>ADS</span>
        </div>
      </a>
    )
  }
  {
    arxivLink && (
      <a href={arxivLink} class="hover:text-indigo-500">
        <div class="grid grid-cols-1">
          <i class="ai ai-arxiv ai-3x" />
          <span>arXiv</span>
        </div>
      </a>
    )
  }
</div>
