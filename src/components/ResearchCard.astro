---
import FOMButton from '../components/FOMButton.astro';
const { image, title } = Astro.props;
---

<div class="max-w-sm border border-gray-300 rounded-md mb-4 w-full mx-0">
  <a href="#">
    <img class="rounded-t-md w-full" src={image} alt="" />
  </a>
  <div class="p-3 prose text-right">
    <h2 class="mb-2 text-2xl font-extrabold tracking-tight text-left">
      {title}
    </h2>
    <p class="mb-3 text-left"><slot /></p>
    <FOMButton />
  </div>
</div>
